<body>

<div class="container">
<div class="row">
<div class="col-md-10 ">
<form class="form-horizontal">
<fieldset class"userProfile">

<!-- Form Name -->
<legend>{{result.first_name}}'s Profile</legend>

<!-- Text input-->




<div class="form-group">
  <label class="col-md-4 control-label" for="first_name_label">First Name</label>
  <div class="col-md-4">
 <div class="input-group">
       <div class="input-group-addon">
        <i class="fa fa-user-circle">
        </i>
       </div>
       <input id="first_name" name="first_name" type="text" placeholder="{{result.first_name}}" class="form-control input-md">
      </div>
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="last_name_label">First Name</label>
  <div class="col-md-4">
 <div class="input-group">
       <div class="input-group-addon">
        <i class="fa fa-user-circle">
        </i>
       </div>
       <input id="last_name" name="last_name" type="text" placeholder="{{result.last_name}}" class="form-control input-md">
      </div>
  </div>
</div>

<!-- Address -->
<div class="form-group">
  <label class="col-md-4 control-label col-xs-12" for="Address">Address</label>
  <div class="col-md-8  col-xs-8">
    <input id="address_line_1" name="address_line_1" type="text" placeholder="{{result.address_line_1}}" class="form-control input-md ">
  </div>
  <label class="col-md-4 control-label col-xs-12" for="Address"></label>
  <div class="col-md-8  col-xs-8">
    <input id="Paddress_line_2" name="address_line_2" type="text" placeholder="{{result.address_line_2}}" class="form-control input-md">
  </div>
  <label class="col-md-4 control-label col-xs-12" for="Address"></label>
  <div class="col-md-8  col-xs-8">
    <input id="city" name="city" type="text" placeholder="{{result.city}}" class="form-control input-md ">
  </div>
  <label class="col-md-4 control-label col-xs-12" for="Address"></label>
  <div class="col-md-8  col-xs-8">
    <input id="state" name="state" type="text" placeholder="{{result.state}}" class="form-control input-md ">
  </div>
  <label class="col-md-4 control-label col-xs-12" for="Address"></label>
  <div class="col-md-8  col-xs-8">
    <input id="zip" name="zip" type="number" placeholder="{{result.zip}}" class="form-control input-md ">
  </div>
</div>

<!-- Phone/Email input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="phone_number_label">Phone number </label>
  <div class="col-md-4">
    <div class="input-group">
       <div class="input-group-addon">
         <i class="fa fa-phone"></i>
       </div>
       <input id="phone_numebr" name="phone_number" type="tel" placeholder="{{result.phone_number}}" class="form-control input-md">
    </div>
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="email_address_label">Email Address</label>
  <div class="col-md-4">
    <div class="input-group">
         <div class="input-group-addon">
           <i class="fa fa-envelope-o"></i>
         </div>
         <input id="email_address" name="email_address" type="text" placeholder="{{result.email_address}}" class="form-control input-md">
    </div>
  </div>
</div>


<!-- File Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="Upload photo">Upload photo</label>
  <div class="col-md-4">
    <input id="Upload photo" name="Upload photo" class="input-file" type="file">
  </div>
</div>


<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="url-label">URL Address</label>
  <div class="col-md-4">
  <div class="input-group">
       <div class="input-group-addon">
     <i class="fa fa-globe"></i>
       </div>
      <input id="url" name="url" type="text" placeholder="{{result.url}}" class="form-control input-md">
      </div>
  </div>
</div>


<!-- Textarea -->
<div class="form-group">
  <label class="col-md-4 control-label" for="Overview (max 225 words)">Bio (max 200 words)</label>
  <div class="col-md-8">
    <textarea class="form-control" rows="10"  id="bio" name="bio" placeholder="{{result.bio}}"></textarea>
  </div>
</div>


<div class="form-group">
  <label class="col-md-4 control-label" ></label>
  <div class="col-md-4">
  <a href="#" class="btn btn-sm btn-success"><span class="glyphicon glyphicon-thumbs-up"></span> Submit</a>
  <a href="#" class="btn btn-sm btn-danger" value=""><span class="glyphicon glyphicon-remove-sign"></span> Clear</a>

  </div>
</div>

</fieldset>
</form>
</div>
<!-- Image -->
<div class="col-md-2 hidden-xs">
  <img src="{{result.img}}" class="img-responsive img-thumbnail ">
</div>
</div>
</div>

</body>


