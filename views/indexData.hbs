<div class="container">
  <h1>Resource Index Page </h1>
  {{#each resultArray}}
  <div class="row">
    <div class="col-md-2">
      <img src=" {{ this.logo_img }}"
        alt = "{{ this.logo_img }}"
        class="image">
    </div>
    <div class="col-md-2">
      <img src=" {{ this.image }}"
        alt = "{{ this.image }}"
        class="image">
    </div>
    <div class="col-md-6">
      <h2>
        <a href="/owners/{{ this.id }}">{{ this.first_name}} {{this.name}} </a>
      </h2>
          <p>{{this.first_name}}</p>
          <p>{{this.last_name}}</p>
          <p>{{this.description}}</p>
          <p>{{this.bio}}</p>
          <p>{{this.address_line_1}}</p>
          <p>{{this.address_line_2}}</p>
          <p>{{this.city}}</p>
          <p>{{this.state}}</p>
          <p>{{this.zip}}</p>
          <p>{{this.phone_number}}</p>
          <p>{{this.email_address}}</p>
          <p>{{this.url}}</p>

          <form action="/owners/{{ this.id }}?_method=DELETE" method="POST">
            <input
              class="btn btn-sm btn-danger"
              type="submit"
              name="delete"
              value="Delete Owner">
            </form>
            <br>
          <form action="/owners/{{ this.id }}/edit" method="GET">
            <input
              class="btn btn-sm btn-danger"
              type="submit"
              name="edit"
              value="Edit Owner">
          </form>
          </p>
        </div>
      </div>
      {{/each}}
    </div>
