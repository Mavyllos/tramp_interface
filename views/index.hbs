<div class="container">
  <h1>Owners Index Page</h1>
  {{#each owners}}
  <div class="row">
    <div class="col-md-2">
      <img src="{{ this.poster_url }}"
        alt="{{ this.title }}"
        class="poster">
    </div>
    <div class="col-md-6">
      <h2>
        <a href="/movies/{{ this.id }}">{{ this.title }}</a>
      </h2>
      <p>name: {{ this.first_name }}</p>
      <p>last: {{ this.last_name }}</p>
    
      <p>
        <form action="/movies/{{ this.id }}?_method=DELETE" method="POST">
          <input
            class="btn btn-sm btn-danger"
            type="submit"
            name="delete"
            value="Delete Movie">
        </form>
      </p>
    </div>
  </div>
  {{/each}}
</div>
