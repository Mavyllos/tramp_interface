<body>
    <div class="container">
        <div class="row">
            <div class="col-md-10 ">
                <form method="POST" action="/walkers/{{ result.id }}?_method=PUT" class="form-horizontal">
                    <fieldset class "userProfile">
                        <legend>{{result.first_name}}'s Profile</legend>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="first_name_label">First Name</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-user-circle">
                                        </i>
                                    </div>
                                    <input id="first_name" name="first_name" type="text" value="{{result.first_name}}" class="form-control input-md">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="last_name_label">Last Name</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-user-circle">
                                        </i>
                                    </div>
                                    <input id="last_name" name="last_name" type="text" value="{{result.last_name}}" class="form-control input-md">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label col-xs-12" for="Address">Address</label>
                            <div class="col-md-8  col-xs-8">
                                <input id="address_line_1" name="address_line_1" type="text" value="{{result.address_line_1}}" class="form-control input-md ">
                            </div>
                            <label class="col-md-4 control-label col-xs-12" for="Address"></label>
                            <div class="col-md-8  col-xs-8">
                                <input id="Paddress_line_2" name="address_line_2" type="text" value="{{result.address_line_2}}" class="form-control input-md">
                            </div>
                            <label class="col-md-4 control-label col-xs-12" for="Address"></label>
                            <div class="col-md-8  col-xs-8">
                                <input id="city" name="city" type="text" value="{{result.city}}" class="form-control input-md ">
                            </div>
                            <label class="col-md-4 control-label col-xs-12" for="Address"></label>
                            <div class="col-md-8  col-xs-8">
                                <input id="state" name="state" type="text" value="{{result.state}}" class="form-control input-md ">
                            </div>
                            <label class="col-md-4 control-label col-xs-12" for="Address"></label>
                            <div class="col-md-8  col-xs-8">
                                <input id="zip" name="zip" type="number" value="{{result.zip}}" class="form-control input-md ">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="phone_number_label">Phone number </label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-phone"></i>
                                    </div>
                                    <input id="phone_numebr" name="phone_number" type="tel" value="{{result.phone_number}}" class="form-control input-md">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="email_address_label">Email Address</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-envelope-o"></i>
                                    </div>
                                    <input id="email_address" name="email_address" type="text" value="{{result.email_address}}" class="form-control input-md">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="image-label">Image URL</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-camera"></i>
                                    </div>
                                    <input id="image" name="image" class="form-control input-md" value="{{result.image}}" type="text">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="url-label">URL Address</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-globe"></i>
                                    </div>
                                    <input id="url" name="url" type="text" value="{{result.url}}" class="form-control input-md">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="Overview (max 225 words)">Bio (max 200 words)</label>
                            <div class="col-md-8">
                                <textarea class="form-control" rows="10" id="bio" name="bio" value="{{result.bio}}"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label"></label>
                            <div class="col-md-8">
                                <button type="submit" class="btn btn-xs btn-success"><span class="glyphicon glyphicon-thumbs-up"></span> Submit</button>
                                <a href="#" class="btn btn-xs btn-danger" value=""><span class="glyphicon glyphicon-remove-sign"></span> Clear</a>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</body>
